{
    "name": "escapework/laravel-boilerplate",
    "description": "The AgÃªncia Escape Laravel Framework bootstrap.",

    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.4.*",
        "laravelcollective/html": "5.4.*",
        "escapework/laravel-steroids": "0.6.*",
        "escapework/laravel-asset-versioning": "0.6.*",
        "genealabs/laravel-caffeine": "0.4.*",
        "msurguy/honeypot": "1.0.*",
        "predis/predis": "^1.1"
    },

    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "laravel/browser-kit-testing": "~1.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },

    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/Helpers/functions.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "scripts": {
        "post-install-cmd": [],

        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "App\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan vendor:publish --tag=public --force"
        ],

        "test": "vendor/bin/phpunit",

        "deploy": [
            "git push origin master"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
