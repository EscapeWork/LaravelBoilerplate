{
	"name": "escape/laravel-bootstrap",
	"description": "A little bootstrap with SASS and Coffeescript provided by Escape Criativação.",
    "keywords": ["laravel", "bootstrap"],
    "license": "MIT",

	"require": {
		"laravel/framework": "4.1.*",
        "escapework/laravelhelpers": "0.6.*"
	},

    "require-dev": {
        "phpunit/phpunit": "@stable",
        "mockery/mockery": "@stable"
    },

	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},

	"scripts": {
		"post-install-cmd": [
            "php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
            "php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate",
            "npm install"
		]
	},

	"config": {
		"preferred-install": "dist"
	},

	"minimum-stability": "stable",

    "extra": {
        "branch-alias": {
            "dev-master": "0.2.*-dev"
        }
    }
}
