{
	"name": "escape/laravel-bootstrap",
	"description": "A little bootstrap with SASS and Coffeescript provided by Escape Criativação.",

	"require": {
		"laravel/framework": "4.0.*",
        "escapework/laravelhelpers": "0.5.*"
	},

    "require-dev": {
        "phpunit/phpunit": "@stable",
        "mockery/mockery": "@stable"
    },

	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},

	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},

	"config": {
		"preferred-install": "dist"
	},

	"minimum-stability": "dev",
    "prefer-stable": true
}
