{
    "name": "escapework/laravel-boilerplate",
    "description": "The AgÃªncia Escape Laravel Framework bootstrap.",

    "require": {
        "laravel/framework": "5.3.*",
        "laravelcollective/html": "5.3.*",
        "escapework/laravel-steroids": "0.5.*",
        "escapework/laravel-asset-versioning": "0.5.*",
        "genealabs/laravel-caffeine": "0.3.*",
        "msurguy/honeypot": "1.0.*"
    },

    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },

    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/Helpers/functions.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },

    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/DatabaseSetup.php"
        ]
    },

    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],

        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan vendor:publish --tag=public --force"
        ],

        "test": "vendor/bin/phpunit",

        "deploy": [
            "git push origin master"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
